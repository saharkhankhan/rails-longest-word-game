 <div class="container">
  <h1 class="pt-4">Game</h1>
  <div class="d-flex justify-content-center mt-4 mb-4">
    <% @letters.each do |letter| %>
    <div class = "letter p-3 ml-3"><%= letter %></div>
    <%end  %>
  </div>

  <h4>What is the longest word you can find?</h4>

  <form class="form-inline" action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
<!--     <input id="letters" name="letters" type="hidden" value = <%= @letters %>/> -->
    <label class="sr-only" for="inlineFormInputWord">Word</label>
    <input name = "word" type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputWord" placeholder="Enter your word">

    <button type="submit" class="btn btn-primary mb-2">Play</button>
  </form>

</div>

